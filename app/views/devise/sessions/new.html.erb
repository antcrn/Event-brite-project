<div class="container">
  <div class="row no-gutter">
    <!-- The image half -->
    <div class="col-md-6 d-none d-md-flex bg-image">
      <img src="https://source.unsplash.com/random/800x900">
    </div>
    <!-- The content half -->
    <div class="col-md-6 bg-light">
      <div class="login d-flex align-items-center py-5">
        <!-- Demo content-->

        <div class="container">
          <div class="row">
            <div class="col-lg-10 col-xl-7 mx-auto">
              <h3 class="display-4">Se connecter</h3>
              <p class="text-muted mb-4">Rejoignez la communaut√© EVENTPROJECT.</p>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-group mb-3">
                  <% f.label :email %>
                  <%= f.text_field :email, class:"form-control rounded-pill border-0 shadow-sm px-4" %>
                </div>

                <div class="form-group mb-3">
                  <% f.label :password %>
                  <%= f.password_field :password, class: "form-control rounded-pill border-0 shadow-sm px-4 text-primary" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-check">
                    <% f.label :remember_me %>
                    <p><%= f.check_box :remember_me %> Remember me</p>
                  </div>
                <% end %>
                
                <%= f.submit "Se connecter", class:"btn btn-success btn-block mb-2 rounded-pill shadow-sm" %>

                <div class="text-left d-flex justify-content-between mt-4"><p class="class: 'font-italic text-primary'"><%= render "devise/shared/links" %> </p></div>   
                <% end %>   
            </div>
          </div>
        </div><!-- End -->
      </div>
    </div><!-- End -->
  </div>
</div>





